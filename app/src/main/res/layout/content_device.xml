<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blue_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androidtutz.bulana.devices.view.DeviceActivity"
    tools:showIn="@layout/activity_device">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ad">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:showIn="@layout/activity_device">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDeviceName"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginLeft="10dp"
                    android:padding="16dp"
                    android:layout_marginTop="3dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="16dp"
                    tools:layout_constraintTop_creator ="1"
                    tools:layout_constraintLeft_creator ="1"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/tvNumberOfAvailableDevices"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="16dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvDeviceName"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layout_constraintTop_creator="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/tvSignOutDate"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="16dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvNumberOfAvailableDevices"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tvCurrentDeviceUser"
                    android:layout_marginLeft="10dp"
                    android:padding="16dp"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvSignOutDate"
                    app:layout_constraintLeft_toLeftOf="parent" />

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>